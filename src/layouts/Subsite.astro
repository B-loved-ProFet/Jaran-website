---
import ContactButton from "../components/ContactButton.astro";
import Footer from "../components/Footer.astro";
import Form from "../components/Form.astro";
import Nav from "../components/Nav.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{"JARAN Prywatne biuro detektywistyczne Warszawa"}</title>
  </head>

  <body class="font-[Roboto] static">
    <Nav />
    <section class="bg-gray-900">
      <div
        class="absolute z-20 flex flex-col w-full top-24 sm:top-24 lg:top-28 xl:top-48"
      >
        <h1
          class="text-5xl sm:text-5xl lg:text-7xl -mb-5 sm:-mb-0 lg:mb-0 font-thin text-gray-300 mx-auto leading-tight"
        >
          {Astro.props.title}
        </h1>
        <ContactButton />
      </div>
      <div
        class="z-10 absolute sm:-top-16 md:-top-24 lg:-top-32 xl:-top-40 2xl:-top-48 mx-auto"
        class=""
      >
      <picture>
        <img
          class={Astro.props.clss}
          src={Astro.props.imgsrc}
          class="object-fill mx-auto"
        />
      </picture>
      </div>

      <div
        class="absolute z-10 w-full mt-[235px] sm:mt-[285px] md:mt-[282px] lg:mt-[376px] xl:mt-[470px] 2xl:mt-[564px] flex flex-col bg-gray-900"
      >
        <div class="flex flex-row">
          <article class="container md:pl-20 flex w-full">
            <div class="container text-gray-300 lg:px-6 w-10/12">
              <section>
                <div
                  class="flex flex-col items-center w-full px-10 py-8 text-left"
                >
                  <slot />
                </div>
              </section>
            </div>
          </article>
          <div class="pt-12">
            <Sidebar />
          </div>
        </div>
        <Form />
        <Footer />
      </div>
    </section>
  </body>
</html>
